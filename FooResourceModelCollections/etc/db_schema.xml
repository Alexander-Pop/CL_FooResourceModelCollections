<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="cl_bazhana" resource="default" engine="innodb"
           comment="Bazhana table to store foo information">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Foo ID"/>
        <column xsi:type="varchar" name="name" nullable="false" length="30"
                comment="Foo Name"/>
        <column xsi:type="varchar" name="production_company" nullable="false" length="30"
                comment="Production Company"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
